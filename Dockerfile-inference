# Base image can be lightweight, as long as we install the right packages
FROM python:3.9-slim

# Set working directory
WORKDIR /opt/ml/code

# Install dependencies â€” includes exact scikit-learn version to match training
RUN apt-get update && apt-get install -y \
    gcc \
 && pip install --upgrade pip \
 && pip install \
    scikit-learn==1.5.1 \
    pandas \
    numpy \
    joblib \
    s3fs \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

# Copy your inference script
COPY serve.py /opt/ml/code/serve.py

# Required SageMaker environment variables
ENV SAGEMAKER_PROGRAM=serve.py
ENV PYTHONUNBUFFERED=TRUE
