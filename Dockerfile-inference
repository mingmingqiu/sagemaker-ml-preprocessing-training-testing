FROM 763104351884.dkr.ecr.us-east-1.amazonaws.com/pytorch-inference:1.13.1-cpu-py39-ubuntu20.04-sagemaker

WORKDIR /opt/ml/code

# Install dependencies
RUN pip install --upgrade pip \
 && pip install pandas numpy scikit-learn boto3 s3fs joblib

# Copy your inference script
COPY serve.py /opt/ml/code/serve.py

# Tell SageMaker which file to call
ENV SAGEMAKER_PROGRAM=serve.py
ENV PYTHONUNBUFFERED=TRUE
