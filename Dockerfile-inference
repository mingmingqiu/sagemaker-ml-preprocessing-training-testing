FROM python:3.9-slim

WORKDIR /opt/ml/code

RUN apt-get update && apt-get install -y gcc \
 && pip install --upgrade pip \
 && pip install \
    scikit-learn==1.5.1 \
    cython==3.0.10 \
    pandas \
    numpy \
    joblib \
    s3fs \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

COPY serve.py .

ENV SAGEMAKER_PROGRAM=serve.py
ENV PYTHONUNBUFFERED=TRUE
